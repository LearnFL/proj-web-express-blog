<%- include('./partials/header'); -%>

<h1>Contacts</h1>

<div class="contact-content">
  <p> <%= contactContent %> </p> <br>
</div>

<div class="mailing-address-wrapper">
  <p>Mailing Address</p>
  <p> PO BOX 11224 - 2154, 123 Mail Road, City, State </p>
</div>

<div class="contact-form-wrapper ">
  <form class="contact-form" action="/contact" method="post">
    <fieldset>
     <legend><p>Email</p></legend>
      <label for="name">Name</label>
      <input type="text" name="name" required placeholder="Name"> <br>
      <label for="email">Email</label>
      <input type="email" name="email" required placeholder="Email"> <br>
      <textarea id="email" name="emailBody" required placeholder="Text"></textarea><br><br>
      <input class="btn btn-secondary btn-lg" type="submit" value="Submit">
    </fieldset>
  </form>
   <div class="push"></div>
</div>

<%- include('./partials/footer'); -%>
